<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ingenico.logontouch.tools.IPAddressText
        android:id="@+id/hostIpEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/hostPortEdit"
        android:digits="1234567890."


        android:text="192.168.10.68"
        />

    <EditText
        android:id="@id/hostPortEdit"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:maxLength="5"
        android:inputType="number"
        android:digits="1234567890"

        android:text="8080"
        />

    <Button
        android:id="@+id/clearHostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostIpEdit"
        android:layout_alignParentStart="true"
        android:text="Clear"
        />

    <Button
        android:id="@+id/unlockHostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostIpEdit"
        android:layout_alignParentEnd="true"
        android:text="Unlock"
        />

    <Button
        android:id="@+id/requestHostCertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostIpEdit"
        android:layout_toStartOf="@id/unlockHostBtn"
        android:text="Bind Host" />

</RelativeLayout>